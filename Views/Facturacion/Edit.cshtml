@model Gestion_Del_Presupuesto.Models.FacturacionModel

<h1>Editar Facturación</h1>

<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id_Facturacion" />

            <div class="form-group">
                <label asp-for="RazonSocial" class="control-label"></label>
                <input asp-for="RazonSocial" class="form-control" />
                <span asp-validation-for="RazonSocial" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="RUT" class="control-label"></label>
                <input asp-for="RUT" class="form-control" />
                <span asp-validation-for="RUT" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Giro" class="control-label"></label>
                <input asp-for="Giro" class="form-control" />
                <span asp-validation-for="Giro" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Direccion" class="control-label"></label>
                <input asp-for="Direccion" class="form-control" />
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ReceptorDocumento" class="control-label"></label>
                <input asp-for="ReceptorDocumento" class="form-control" />
                <span asp-validation-for="ReceptorDocumento" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Cargo" class="control-label"></label>
                <input asp-for="Cargo" class="form-control" readonly />
                <span asp-validation-for="Cargo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Telefono" class="control-label"></label>
                <input asp-for="Telefono" class="form-control" readonly />
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CorreoElectronico" class="control-label"></label>
                <input asp-for="CorreoElectronico" class="form-control" readonly />
                <span asp-validation-for="CorreoElectronico" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Sede" class="control-label"></label>
                <input asp-for="Sede" class="form-control" readonly />
                <span asp-validation-for="Sede" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Carrera" class="control-label"></label>
                <input asp-for="Carrera" class="form-control" readonly />
                <span asp-validation-for="Carrera" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NivelFormacion" class="control-label"></label>
                <input asp-for="NivelFormacion" class="form-control" readonly />
                <span asp-validation-for="NivelFormacion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Institucion" class="control-label"></label>
                <input asp-for="Institucion" class="form-control" readonly />
                <span asp-validation-for="Institucion" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TiempoPractica" class="control-label"></label>
                <input asp-for="TiempoPractica" class="form-control" readonly />
                <span asp-validation-for="TiempoPractica" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroTiempo" class="control-label"></label>
                <input asp-for="NumeroTiempo" class="form-control" readonly />
                <span asp-validation-for="NumeroTiempo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NumeroAlumnos" class="control-label"></label>
                <input asp-for="NumeroAlumnos" class="form-control" readonly />
                <span asp-validation-for="NumeroAlumnos" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorUFMesPractica" class="control-label"></label>
                <input asp-for="ValorUFMesPractica" class="form-control" onchange="calcularTotales()" />
                <span asp-validation-for="ValorUFMesPractica" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="FechaUFDia" class="control-label"></label>
                <input asp-for="FechaUFDia" type="date" class="form-control" onchange="obtenerUF(this)" />
                <span asp-validation-for="FechaUFDia" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="ValorUF" class="control-label"></label>
                <input asp-for="ValorUF" class="form-control" readonly />
                <span asp-validation-for="ValorUF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Subtotal" class="control-label"></label>
                <input asp-for="Subtotal" class="form-control" readonly />
                <span asp-validation-for="Subtotal" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="NetoUF" class="control-label"></label>
                <input asp-for="NetoUF" class="form-control" readonly />
                <span asp-validation-for="NetoUF" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="TotalaPagar" class="control-label"></label>
                <input asp-for="TotalaPagar" class="form-control" readonly />
                <span asp-validation-for="TotalaPagar" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // Copiar las funciones calcularTotales() y obtenerUF() del Create.cshtml
    </script>
}